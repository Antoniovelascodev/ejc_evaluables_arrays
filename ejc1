
public class ejc1 {

	/*Realiza la función: int [] buscarTodos (int t[], int clave), que crea y devuelve una
	tabla con todos los índices de los elementos donde se encuentra la clave de búsqueda. 
	En el caso de que la clave no se encuentre en la tabla t, la función devolverá una tabla vacía.
	 */
	
	public int [] buscarTodos ( int t[], int clave ) {
		
		int claveCorrecta = 0; //para saber cuantas veces da con la clave  
		
		for (int i = 0; i<t.length ;i++ ) {
			
			if(t[i] == clave) {
				claveCorrecta++;
			}
		
		}
		
	return claveCorrecta;
	}
	
}
